
@{
    ViewBag.Title = "IstekDetay";
}

@using IsTakip.Models;
@model MusteriIstekler

<div class="row">
    <div class="col-lg-12">
        <div class="panel">
            <div class="panel-body" style="overflow-x:auto">
                <div id="unseen">
                    <table width="100%" class="table table-bordered table-striped table-condensed">
                        <thead>
                            <tr>
                                <th class="numeric">İstek No</th>
                                <th class="numeric">İstek Tarihi</th>
                                <th class="numeric">Şirket Adı</th>
                                <th>İstek Tipi</th>
                                <th>İstek</th>
                                <th class="numeric">Görüldü</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="numeric">@Model.id</td>
                                <td class="numeric">@Model.IstekTarihi</td>
                                <td class="numeric">@Model.Musteriler.SirketAdi</td>
                                <td>@Model.IsTakipIstekTipi.TipAdi</td>
                                <td>@Model.Istek</td>
                                <td class="numeric"> <a style="margin-left:20px;">@Html.DisplayFor(modelItem => Model.Goruldu)</a></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
        <di class="panel">
            <header class="panel-heading">
                Sohbet Alanı
            </header>
            <div class="panel-body">
                @foreach (IsTakipYorum yrm in ViewBag.Yorumlar)
                {
                    <div class="chat-form">
                        <!-- Comment -->
                        <div class="msg-time-chat">
                            <div class="message-body msg-in">
                                <span class="arrow"></span>
                                <div class="text">
                                    <p class="attribution">@yrm.YorumYapan at @yrm.YorumTarihi</p>
                                    <p>@yrm.Icerik</p>
                                </div>
                            </div>
                        </div>
                        <!-- /comment -->
                    </div>
                }

                <div class="chat-form">
                    <div class="input-cont ">
                        <textarea id="yorum" class="form-control col-lg-12" placeholder="Type a message here..." rows="3"></textarea>
                    </div>
                    <div class="form-group">
                        <div class="pull-right chat-features">
                            <button type="submit" id="gonder" class="btn btn-success">Gönder</button>
                        </div>
                    </div>
                </div>
            </div>
        </di>
    </div>
    <div class="col-lg-3"></div>
</div>

<script>
    $(document).ready(function () {
        $("#gonder").click(function () {
            var yorumunuz=$("#yorum").val();
            $.ajax({
                url: '/Musteri/YorumYap/',
                data:{yorum:yorumunuz,IstekId:@Model.id},
                type: 'POST',
                success:function () {
                    window.location.replace("/Musteri/IstekDetay/@Model.id");
                },
                error:function () {
                    alert("İşlem sırasında hata oluştur");
                }
            });
        });
    })
</script>