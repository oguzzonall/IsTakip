    <link href="/Content/css/bootstrap.min.css" rel='stylesheet' type='text/css' />
    <link href="/Content/css/bootstrap-reset.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/Content/css/style.css" rel='stylesheet' type='text/css' />
    <!-- Graph CSS -->
    <link href="/Content/css/font-awesome.css" rel="stylesheet">
    <link href="/Content/css/table-responsive.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="/Content/css/style.css" rel="stylesheet">
    <link href="/Content/css/style-responsive.css" rel="stylesheet" />
    <!-- jQuery -->
    @*<link href='/Content/fonts.googleapis.com/css?family=Roboto:700,500,300,100italic,100,400' rel='stylesheet' type='text/css' />
        <link href='/Content/fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>*@
    <!-- lined-icons -->
    <link rel="stylesheet" href="/Content/css/icon-font.min.css" type='text/css' />
    <script src="/Content/js/amcharts.js"></script>
    <script src="/Content/js/serial.js"></script>
    <script src="/Content/js/light.js"></script>
    <!-- //lined-icons -->
    <script src="/Content/js/jquery-1.10.2.min.js"></script>
