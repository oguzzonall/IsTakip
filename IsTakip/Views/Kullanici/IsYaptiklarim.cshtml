
@{
    ViewBag.Title = "IsYaptiklarim";
}

@using IsTakip.Models;
@model List<IsTakipDetay>

@{
    var message = TempData["AlertMessage"] ?? string.Empty;
    int masterid = ViewBag.Masterid;
}

<script type="text/javascript">
    var message = '@message';

    if (message) alert(message);

</script>

<div class="col-lg-12">
    <div class="panel">
        <div class="panel-body" style="overflow-x:auto">
            <div class="btn-group pull-right open">
                <a class="nav-link btn btn-success" data-toggle="modal" data-target="#YapilacakEkleModal">
                    Yapılan Ekle
                </a>
            </div>
            <div id="unseen">
                <table width="100%" class="table table-bordered table-striped table-condensed">
                    <thead>
                        <tr>
                            <th class="numeric">Tarih</th>
                            <th>Açıklama</th>
                            <th class="numeric">Durumu</th>
                            <th class="numeric">Sorumlu</th>
                            <th>Harcanan Süre</th>
                            <th>Kayıt Tarihi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (IsTakipDetay ITD in Model)
                            {
                                <tr>
                                    <td class="numeric">@ITD.Tarih</td>
                                    <td>@ITD.Aciklama</td>
                                    <td class="numeric">@ITD.IsTakipDurumu.DurumAdi</td>
                                    <td class="numeric">@ITD.Kullanicilar.KullaniciAdi</td>
                                    <td class="numeric">@ITD.HarcananSure</td>
                                    <td class="numeric">@ITD.KayitTarihi</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="YapilacakEkleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="exampleModalLabel">Yapılan Ekle</h4>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">

                <form action="/Kullanici/YapilanEkle/@masterid" method="post">
                    <div class="form-group">
                        <label>Açıklama:</label>
                        <textarea name="Aciklama" class="form-control" rows="5" required=""></textarea>
                    </div>
                    <div class="form-group">
                        <label>Durumu</label>
                        <select name="Durumid" class="form-control error" required="">
                            @foreach (IsTakipDurumu durum in ViewBag.Durumlar)
                            {
                                <option value="@durum.Id">@durum.DurumAdi</option>
                            }
                        </select>

                    </div>
                    <div class="form-group">
                        <label>Tamamlanma Yüzdesi:</label>
                        <input class="form-control error" type="number" name="TamamlanmaYuzdesi" min="0" max="100" required="">
                    </div>
                    <div class="form-group">
                        <label>İş için Harcanan Süre</label>
                        <input class="form-control error" type="number" name="HarcananSure" min="0" required="">

                    </div>
                    <div class="form-group">
                        <button class="btn btn-success" type="submit">Yapılanı Ekle</button>
                    </div>
                    @*<span style="color:red; font-size:16px">@ViewBag.Hata</span>*@
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">İptal</button>
            </div>
        </div>
    </div>
</div>

